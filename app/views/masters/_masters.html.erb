<% if @masters_count > 0 %>
    <%= @masters_count %> masters found
    <table cellspacing="0" width="100%">
      <tr>
        <th>
          <%= sort_link(@search,
                        :id,
                        'ID') %>
        </th>
        <th>
          <%= sort_link(@search,
                        :video_programme_title,
                        'Programme Title') %>
        </th>
        <th>
          <%= sort_link(@search,
                        :episode_title,
                        'Episode Title') %>
        </th>
        <th>
          <%= sort_link(@search,
                        :episode_number,
                        'Episode Number') %>
        </th>
        <th>
          <%= sort_link(@search,
                        :location,
                        'Location') %>
        </th>
        <th colspan="2"></th>
      </tr>

      <%= render partial: "master",
                 collection: @masters %>

    </table>

    <br/>
    <br/>
    <%= will_paginate @masters %>
    <%
      def items_per_page_select(collection = Masters)
        select_tag :per_page, options_for_select([10, 20, 50, 100], collection.per_page)
      end
    %>
    <%= form_for '/masters', method: :get do |f| %>
      <span>Items per page: </span>
      <%= items_per_page_select @masters %>
      <%= f.submit "Submit" %>
    <% end %>

<% else %>

    No masters were found

<% end %>