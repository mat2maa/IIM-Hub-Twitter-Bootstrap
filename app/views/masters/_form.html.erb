					<td><%= f.input :tape_size, :as => :select, :collection => ["Small","Large"], :label => "Tape Size", 
						:include_blank => true %></td>	
					<td><%= f.input :video_subtitles, :as => :select, :collection => IIM::MOVIE_LANGUAGES ,:include_blank => true, 
						:label => "Video Subtitles" %></td>					
				</tr>
				<tr>
					<td rowspan="2">Episode Synopsis: <%= f.text_area :synopsis, :size => "29x3" %></td>
					<td>
						<%= f.input (:language_track_1,	:as => :select, :collection => IIM::MOVIE_LANGUAGES, :include_blank => true, 
							:label => "Lang Track 1<br/>")  %>
					</td>			
					<td>
					<%= f.input (:language_track_2,	:as => :select, :collection => IIM::MOVIE_LANGUAGES, :include_blank => true, 
							:label => "Lang Track 2<br/>") %>
					</td>
					<td><%= f.input :language_track_3,	:as => :select, :collection => IIM::MOVIE_LANGUAGES, :include_blank => true, 
							:label => "Lang Track 3<br/>" %></td>
					<td><%= f.input :language_track_4,	:as => :select, :collection => IIM::MOVIE_LANGUAGES, :include_blank => true, 
							:label => "Lang Track 4<br/>" %></td>			
					<td>
						<%= f.input (:aspect_ratio, :as => :select, :collection => ["4:3", "16:9", "14:9"], :include_blank => false)  %>
					</td>
				</tr>
				<tr>
					<td>Tape Location: <br/>
						<%= f.text_field(:location, :size => 8) if !f.object.id.nil? %>
						<%= f.text_field(:location, :size => 8, :value => @master_location) if f.object.id.nil? %>
					</td>
					<td><%= f.input :time_in, :size => 8, :input_html=>{:class=>"master_time"}, :label => "Time In" %></td>
					<td><%= f.input :time_out, :size => 8, :input_html=>{:class=>"master_time"}, :label => "Time Out" %></td>
					<td>Duration: <br/><%= f.object.duration %></td>
					<td><%= f.buttons %></td>
				</tr>
		</table>		
		
	<% end %>
<% end %>