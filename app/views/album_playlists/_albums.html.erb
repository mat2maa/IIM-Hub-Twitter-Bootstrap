<% if @albums_count > 0 %>
    <%= @albums_count %> albums found

    <table cellspacing="0" width="100%">
      <tr>
        <th>
          <%= sort_link @search,
                        :id,
                        'ID',
                        {},
                        { remote: true } %>
        </th>
        <th>
          <%= sort_link @search,
                        :title_original,
                        'Original Title',
                        {},
                        { remote: true } %>
        </th>
        <th>
          <%= sort_link @search,
                        :artist_original,
                        'Original Artist',
                        {},
                        { remote: true } %>
        </th>
        <th>
          <%= sort_link @search,
                        :release_year,
                        'Release Year',
                        {},
                        { remote: true } %>
        </th>
        <th>
          <%= sort_link @search,
                        :cd_code,
                        'CD Code',
                        {},
                        { remote: true } %>
        </th>
        <th>&nbsp;</th>
      </tr>
      <% @albums.each do |album| %>
          <tr>
            <% cache([album]) do %>
                <td><%= link_to album.id,
                                album_path(id: album.id) %></td>
                <td><%= album.title_original %>
                  <br/><%= album.title_english %></td>
                <td><%= album.artist_original %>
                  <br/><%= album.artist_english %></td>
                <!--
								<td><%#=h album.label.name if !album.label_id.nil? %></td>-->
                <td><%= album.release_year %>&nbsp;</td>
                <td><%= album.cd_code %>&nbsp;</td>
            <% end %>
            <td>
              <%= link_to "add to playlist",
                          add_album_album_playlist_path(@album_playlist, album_id: album.id),
                          method: :post,
                          remote: true,
                          loading: "Element.show('spinner')",
                          complete: "Element.hide('spinner')" %>
            </td>
          </tr>

      <% end %>
    </table>
    <br/>
    <br/>
    <%= will_paginate @albums %>
<% else %>
    No albums were found
<% end %>