if @track_is_deleted
  page.visual_effect :fade,
                     "track-#{@track.id}"
else
  page.replace "track-#{@track.id}",
               partial: "track",
               object: @track
  page.replace_html :notice,
                    flash[:notice]
  page.visual_effect :highlight,
                     :notice
  flash.discard
end