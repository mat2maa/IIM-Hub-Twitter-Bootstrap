  <div id="nav">
    <ul>
      <li><%= link_to "Dashboard",
                      controller: "dashboard" %></li>
      <% if permitted_to? :edit,
                          :users %>
          <li><%= link_to "Users",
                          users_path %></li>
      <% end %>
      <% if permitted_to? :edit,
                          :roles %>
          <li id="curr-nav"><%= link_to "Roles",
