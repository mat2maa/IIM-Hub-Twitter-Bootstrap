<fieldset>
  <legend>Search Movies Playlists</legend>
  <%= search_form_for @search,
                      class: 'spinner-trigger' do |movie_playlists| %>
      Match ANY or ALL of the conditions:
      <%= movie_playlists.combinator_select %>
      <%= image_tag 'spinner.gif',
                    id: 'spinner',
                    class: 'transparent' %>
      <br/>
      <table>
        <tr>
          <td>
            Playlist ID:<br/>
            <%= movie_playlists.text_field :id_eq,
                                           size: 6 %>
            <br/>
          </td>
          <td>
            Airline:<br/>
            <%= movie_playlists.select :airline_id_eq,
                                       Airline.order("name asc")
                                       .collect { |p| [p.name,
                                                       p.id] },
                                       {include_blank: true} %>
            <br/>
          </td>
          <td>
            Movie Playlist Type:<br/>
            <%= movie_playlists.select :movie_playlist_type_id_eq,
                                       MoviePlaylistType.order("name asc")
                                                        .collect { |p| [p.name,
                                                                        p.id] },
                                       {include_blank: true} %>
            <br/>
          </td>
          <td>
            Start Playdate:<br/>
            <%= movie_playlists.date_select :start_cycle_matches,
                                            {discard_day: true,
                                             order: [:month,
                                                     :year],
                                             include_blank: true,
                                             use_month_numbers: true,
                                             start_year: Date.today.year + 2,
                                             end_year: 1900} %>
            <br/>
          </td>
          <td>
            End Playdate:<br/>
            <%= movie_playlists.date_select :end_cycle_matches,
                                            {discard_day: true,
                                             order: [:month,
                                                     :year],
                                             include_blank: true,
                                             use_month_numbers: true,
                                             start_year: Date.today.year + 2,
                                             end_year: 1900} %>
            <br/>
          </td>
          <td valign="bottom">
            <%= movie_playlists.submit "Search" %>
            <input type="reset" value="Reset">
          </td>
        </tr>
      </table>
  <% end %>
</fieldset>
