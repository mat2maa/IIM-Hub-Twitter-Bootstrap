<% content_for(:head) do %>
    <meta name="pdfkit-orientation" content="Landscape"/>
    <script>
        jQuery(document).ready(function () {
            jQuery('#print_playlist').click(function (event) {
                if (!confirm("ALERT! Please change your page layout to LANDSCAPE when printing")) {
                    event.preventDefault();
                }
            });
        });
    </script>
<% end %>

<%= render partial: 'layouts/movieplaylist_header' %>
<center>
  <p style="color: green">
    <%= flash[:notice] %>
  </p>
</center>

<div id="content-header-wrapper">

  <div id="content-header-actions">
    <%= link_to "Print Playlist",
                {controller: "movie_playlists",
                 action: "show",
                 id: @movie_playlist},
                id: 'print_playlist',
                target: '_blank' %>

    |

    <%= link_to "Download Full PDF",
                {controller: "movie_playlists",
                 action: "print",
                 id: @movie_playlist,
                 format: "pdf"} %>

    |

    <%#= link_to "Download Summary PDF",
{controller: "movie_playlists",
action: "edit",
 id: @movie_playlist,
format: "pdf"} %>
    <%= link_to "Export as Excel",
                controller: "movie_playlists",
                action: "export_to_excel",
                id: @movie_playlist %> |
    <%= link_to "Create a playlist",
                new_movie_playlist_path %>
  </div>

  <div id="content-header">Movie Playlists</div>
</div>

<div id="content">
  <center>
    <h2>Edit Movie Playlist</h2>

    <%= link_to "Add Movie", add_movie_to_playlist_path(id: @movie_playlist.id), id: "add_movie_to_playlist" %>

    <br/>
    <br/>

    <%= render 'form' %>

    <div id="playlist">
      <%= render partial: 'playlist',
                 object: @movie_playlist %>
    </div>

  </center>

  <div id="add_movie_dialog" style="display:none;">
    <div id="add_movie">
    </div>
  </div>

</div>

<script type="text/javascript">
    var $ = jQuery;

    $(function () {
        $(document).on("click", "#add_movie_to_playlist", function (movie) {
            movie.preventDefault();
            $('#add_movie_dialog').dialog({
                title: 'Add Movie',
                modal: true,
                width: 740,
                height: 540,
                position: ['center', 100],
                close: function (movie, ui) {
                    $('#add_movie_dialog').dialog('destroy')
                }
            });
            $.ajax({ url: '/add_movie_to_playlist/<%= @movie_playlist.id %>',
                type: 'get',
                dataType: 'script'
            });
        });
    });
</script>
