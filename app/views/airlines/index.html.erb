<%= render partial: 'header' %>
<div id="content">
  <center>
    <%= render 'form' %>
    <br/>

    <table border="0" cellpadding="10" cellspacing="0" width="100%" id="airlines">
      <tr>
        <td class="list-header">ID</td>
        <td class="list-header">Airline Name</td>
        <td class="list-header">Airline Code</td>
        <td colspan="2" class="list-header">&nbsp;</td>
      </tr>
      <%= render partial: 'airline',
                 collection: @airlines %>
    </table>

    <br/>
    <br/>
    <%= will_paginate @airlines %>
    <%
      def items_per_page_select(collection = Airline)
        select_tag :per_page, options_for_select([10, 20, 50, 100], collection.per_page)
      end
    %>
    <%= form_for '/airlines', method: :get, html: { class: 'items_per_page_select' } do |f| %>
      <span>Items per page: </span>
      <%= items_per_page_select @airlines %>
      <%= f.submit "Submit" %>
    <% end %>

  </center>
</div>