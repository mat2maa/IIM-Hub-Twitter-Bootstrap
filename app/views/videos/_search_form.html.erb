<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html>
<head>
  <title></title>
</head>
<body>

<fieldset>
  <legend>Search Videos</legend>

  <%= search_form_for @search,
                      loading: "Element.show('spinner')",
                      complete: "Element.hide('spinner')" do |videos| %>

      <!--Match ANY or ALL of the conditions:<br />-->
      <%#= videos.select :any,
[["All",
false],
["Any",
true]] %>
      <br/>

      <%= image_tag 'spinner.gif',
                    id: 'spinner',
                    style: 'display:none;' %>
      <br/>

      <table>
        <tr>
          <td valign="top">
            Video Title:<br/>
            <%= videos.text_field :programme_title_cont %>
            <br/>
            Episode Title:<br/>
            <!--TODO What is masters_episode_title? -->
            <%#= videos.text_field :masters_episode_title %>
            <br/>
          </td>
          <td valign="top">
            Distributor:<br/>
            <%= videos.select :video_distributor_id_eq,
                              Supplier.video_distributors
                              .collect { |p| [p.company_name,
                                              p.id] },
                              include_blank: true %>
            <br/>
            Laboratory:<br/>
            <%= videos.select :laboratory_id_eq,
                              Supplier.laboratories
                              .collect { |p| [p.company_name,
                                              p.id] },
                              include_blank: true %>
            <br/>

          </td>
          <td valign="top">
            Lang Track:<br/>
            <%= select :language,
                       :track,
                       @languages,
                       {include_blank: true} %>
            <br/>
            Lang Subtitles:<br/>
            <%= select :language,
                       :subtitle,
                       @languages,
                       {include_blank: true} %>
          </td>
          <td valign="top">
            Genre:<br/>
            <%= videos.select :video_genres_video_parent_genre_id_eq,
                              VideoParentGenre.all
                              .collect { |p| [p.name,
                                              p.id] },
                              {include_blank: true} %>
            <br/>
            Sub Genre:<br/>
            <%= videos.select :video_genres_id_eq,
                              VideoGenre.all
                              .collect { |p| [p.name,
                                              p.id] },
                              {include_blank: true} %>
          </td>
          <td valign="top">
            Video type:<br/>
            <%= videos.select :video_type_eq,
                              Video::VIDEO_TYPES,
                              {include_blank: true} %> <br/>
            Production Year:<br/>
            <%= videos.text_field :production_year_eq,
                                  size: 6 %>
          </td>
          <td valign="top">
            Masters Held:<br/>
            <%= check_box_tag :masters %>
            <br/>
            Tape Location Number:<br/>
            <%= videos.text_field :masters_location_eq,
                                  size: 6 %>
            <br/>
          </td>
          <td valign="top">
            Screeners Held:<br/>
            <%= check_box_tag :screeners %>
            <br/>
            Video ID:<br/>
            <%= videos.text_field :id_eq,
                                  size: 6 %>
          </td>
        </tr>
      </table>

      <%= videos.submit "Search" %>
      <input type="reset" value="Reset">
  <% end %>
</fieldset>

</body>
</html>
