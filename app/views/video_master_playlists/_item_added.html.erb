<% if @notice=="" %>
    "<%= @master_to_add.episode_title %>" added to playlist
<% else %>
    <%= @notice %>
    <%= link_to_remote "Continue adding to playlist",
                       url: {controller: "video_master_playlists",
                             action: "add_master",
                             id: params[:id],
                             master_id: @master_to_add.id,
                             add: 1},
                       loading: "Element.show('spinner')",
                       complete: "Element.hide('spinner')" %>

<% end %>