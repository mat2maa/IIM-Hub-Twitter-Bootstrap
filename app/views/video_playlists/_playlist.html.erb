<table width="100%">
  <tbody id="videoplaylist" style="cursor: move">
  <%= render partial: 'playlist_item',
             collection: @video_playlist.video_playlist_items_sorted %>
  </tbody>
</table>

<script>

    var $ = jQuery;

    $(document).ready(function() {
        $("#videoplaylist").sortable({
            axis: 'y',
            containment: 'parent',
            cursor: 'crosshair',
            items: 'tr.sortable'
        });
    });

</script>


<%#
= sortable_element "videoplaylist",
                     url: {action: "sort"},
                     complete: visual_effect(:highlight,
                                             "videoplaylist"),
                     tag: 'tr'
%>