<%= render partial: 'layouts/screener_header' %>
<center>
  <p style="color: green">
    <%= flash[:notice] %>
  </p>
</center>
<div id="content-header-wrapper">
  <div id="content-header-actions">
    [ <%= link_to "Prev",
                  edit_screener_path(@prev_id) if !@prev_id.nil? %>
    <%= link_to "Next",
                edit_screener_path(@next_id) if !@next_id.nil? %> ]
    <% if permitted_to? :admin_delete,
                        :screeners %>
        <%= link_to 'Delete',
                    screener_url(@screener),
                    remote: true,
                    method: :delete,
                    confirm: 'Are you sure?' %>
    <% end %>

  </div>
  <div id="content-header">Edit Screener<br/>
  </div>
</div>
<div id="content">
  <center>
    <h1>Edit Screener</h1>

    <%= render partial: 'search_form',
                   object: @search %>
    <br/><br/>

    <%= render partial: 'edit_form' %>

  </center>
  <br/><br/>
</div>
