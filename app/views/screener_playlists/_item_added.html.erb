<% if @notice=="" %>
    "<%= @screener_to_add.episode_title %>" added to playlist
<% else %>
    <%= @notice %>
    <%= link_to_remote "Continue adding to playlist",
                       url: {controller: "screener_playlists",
                             action: "add_screener",
                             id: params[:id],
                             screener_id: @screener_to_add.id,
                             add: 1},
                       loading: "Element.show('spinner')",
                       complete: "Element.hide('spinner')" %>

<% end %>